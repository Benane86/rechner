using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp13
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Bitte ein Zeichen Eingaben");
            int zahl = Convert.ToChar(Console.ReadLine());
            Console.WriteLine(zahl);
            Console.ReadKey();

            if (zahl == 97)
            {
                Console.WriteLine("a");
                Console.ReadKey();
            }
        }
    
